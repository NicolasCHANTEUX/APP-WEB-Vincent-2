#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'https://kayart.fr/'
app.forceGlobalSecureRequests = true
app.CSPEnabled = false

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = kayart_db
database.default.username = kayart_user
database.default.password = VOTRE_MOT_DE_PASSE_DB
database.default.DBDriver = MySQLi
database.default.DBPrefix = 
database.default.port = 3306

#--------------------------------------------------------------------
# STRIPE (Paiements)
#--------------------------------------------------------------------

stripe.publishableKey = pk_live_VOTRE_CLE_PUBLIQUE
stripe.secretKey = sk_live_VOTRE_CLE_SECRETE
stripe.webhookSecret = whsec_VOTRE_WEBHOOK_SECRET

#--------------------------------------------------------------------
# EMAIL (Gmail SMTP)
#--------------------------------------------------------------------

email.fromEmail = contact.kayart@gmail.com
email.fromName = KayArt
email.protocol = smtp
email.SMTPHost = smtp.gmail.com
email.SMTPUser = contact.kayart@gmail.com
email.SMTPPass = VOTRE_APP_PASSWORD_GMAIL
email.SMTPPort = 587
email.SMTPCrypto = tls
email.SMTPTimeout = 30
email.mailType = html
email.charset = utf-8
email.wordWrap = true

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

encryption.key = GENERER_UNE_CLE_AVEC_php_spark_key:generate

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

session.driver = CodeIgniter\Session\Handlers\FileHandler
session.cookieName = kayart_session
session.expiration = 7200
session.savePath = 
session.matchIP = false
session.timeToUpdate = 300
session.regenerateDestroy = false

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

logger.threshold = 4
